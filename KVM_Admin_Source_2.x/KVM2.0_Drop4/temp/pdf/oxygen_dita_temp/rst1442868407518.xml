    <title ixia_locid="36" class="- topic/title ">Changing the MTU on a small-footprint System using the CLI</title>
    <shortdesc ixia_locid="37" class="- topic/shortdesc ">
        <draft-comment author="rstone" ixia_locid="38" translate="no" dir="ltr" class="- topic/draft-comment ">Topic created for CGTS-1944</draft-comment>
    </shortdesc>
    <prolog class="- topic/prolog ">
        <author ixia_locid="39" class="- topic/author ">Ron Stone</author>
    </prolog>
    <taskbody class="- topic/body task/taskbody ">
        <context id="context_N10026_N10023_N10001" ixia_locid="40" class="- topic/section task/context ">
            <p ixia_locid="41" class="- topic/p ">The following steps illustrate how to change the MTU for an interface
                for an infrastructure network. This example uses eth6 as the interface to be
                changed.</p>
        </context>
        <steps class="- topic/ol task/steps ">
            <step id="step_N10036_N10033_N10023_N10001" ixia_locid="43" class="- topic/li task/step ">
                <cmd ixia_locid="44" class="- topic/ph task/cmd ">Lock controller-1.</cmd>
                <stepxmp ixia_locid="45" class="- topic/itemgroup task/stepxmp ">
                    <codeblock ixia_locid="46" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="47" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="48" class="+ topic/ph sw-d/userinput ">system host-lock controller-1</userinput></codeblock>
                </stepxmp>
            </step>
            <step id="step_N1004C_N10033_N10023_N10001" ixia_locid="49" class="- topic/li task/step ">
                <cmd ixia_locid="50" class="- topic/ph task/cmd ">Modify the MTU of an interface on controller-1.</cmd>
                <stepxmp ixia_locid="51" class="- topic/itemgroup task/stepxmp ">
                    <codeblock ixia_locid="52" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="53" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="54" class="+ topic/ph sw-d/userinput ">system host-if-modify controller-1 eth6 --imtu 1600</userinput></codeblock>
                </stepxmp>
            </step>
            <step id="step_N10063_N10033_N10023_N10001" ixia_locid="56" class="- topic/li task/step ">
                <cmd ixia_locid="57" class="- topic/ph task/cmd ">Unlock controller-1.</cmd>
                <stepxmp ixia_locid="58" class="- topic/itemgroup task/stepxmp ">
                    <codeblock ixia_locid="59" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="60" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="61" class="+ topic/ph sw-d/userinput ">system host-unlock controller-1</userinput></codeblock>
                </stepxmp>
            </step>
            <step id="step_N10079_N10033_N10023_N10001" ixia_locid="62" class="- topic/li task/step ">
                <cmd ixia_locid="63" class="- topic/ph task/cmd ">Swact the host to controller-1. </cmd>
                <stepxmp ixia_locid="64" class="- topic/itemgroup task/stepxmp ">
                    <codeblock ixia_locid="65" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="66" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="67" class="+ topic/ph sw-d/userinput ">system host-swact controller-1</userinput></codeblock>
                </stepxmp>
            </step>
            <step id="step_N1008F_N10033_N10023_N10001" ixia_locid="68" class="- topic/li task/step ">
                <cmd ixia_locid="69" class="- topic/ph task/cmd ">Lock controller-0.</cmd>
                <stepxmp ixia_locid="70" class="- topic/itemgroup task/stepxmp ">
                    <codeblock ixia_locid="71" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="72" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="73" class="+ topic/ph sw-d/userinput ">system host-lock controller-0</userinput></codeblock>
                </stepxmp>
            </step>
            <step id="step_N100A5_N10033_N10023_N10001" ixia_locid="74" class="- topic/li task/step ">
                <cmd ixia_locid="75" class="- topic/ph task/cmd ">Modify the MTU of the interface on controller-0. </cmd>
                <stepxmp ixia_locid="76" class="- topic/itemgroup task/stepxmp ">
                    <codeblock ixia_locid="77" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="78" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="55" class="+ topic/ph sw-d/userinput ">system host-if-modify controller-0 eth6 --imtu 1600</userinput></codeblock>
                </stepxmp>
            </step>
            <step id="step_N100BC_N10033_N10023_N10001" ixia_locid="79" class="- topic/li task/step ">
                <cmd ixia_locid="80" class="- topic/ph task/cmd ">Unlock controller-0. </cmd>
                <stepxmp ixia_locid="81" class="- topic/itemgroup task/stepxmp ">
                    <codeblock ixia_locid="82" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="83" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="84" class="+ topic/ph sw-d/userinput ">system host-unlock controller-0</userinput></codeblock>
                </stepxmp>
            </step>
        </steps>
