              </entry>
              <entry ixia_locid="51"/>
            </row>
            <row>
              <entry ixia_locid="53">
                <p ixia_locid="54"> CINDER_STORAGE</p>
              </entry>
              <entry ixia_locid="55">
                <p ixia_locid="56">(size in GB)</p>
              </entry>
              <entry ixia_locid="57"/>
            </row>
