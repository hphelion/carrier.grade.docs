            </row>
            <row>
              <entry ixia_locid="367">
                <p ixia_locid="368"> DATABASE_STORAGE</p>
              </entry>
              <entry ixia_locid="20">
                <p ixia_locid="21">(size in GB)</p>
              </entry>
              <entry ixia_locid="22">
                <p ixia_locid="23">Postgres database size</p>
              </entry>
            </row>
            <row>
              <entry ixia_locid="25">
                <p ixia_locid="26"> IMAGE_STORAGE</p>
              </entry>
              <entry ixia_locid="27">
                <p ixia_locid="28">(size in GB)</p>
              </entry>
              <entry ixia_locid="29">
                <p ixia_locid="30">Storage for nova instances launched from glance images</p>
              </entry>
            </row>
            <row>
              <entry ixia_locid="32">
                <p ixia_locid="33"> BACKUP_STORAGE</p>
              </entry>
              <entry ixia_locid="34">
                <p ixia_locid="35">(size in GB)</p>
              </entry>
              <entry ixia_locid="36">
                <p ixia_locid="37">Must be at least DATABASE_STORAGE + 10</p>
              </entry>
            </row>
            <row>
              <entry ixia_locid="39">
                <p ixia_locid="40"> CINDER_BACKEND</p>
              </entry>
              <entry ixia_locid="41">
                <p ixia_locid="42"><option ixia_locid="43">lvm</option> or <option ixia_locid="44">ceph</option></p>
              </entry>
              <entry ixia_locid="45"/>
            </row>
            <row>
