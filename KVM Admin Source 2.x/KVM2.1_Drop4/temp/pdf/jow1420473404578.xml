            <step id="step_N101B3_N1004F_N1001E_N10001" ixia_locid="281" class="- topic/li task/step ">
                <cmd ixia_locid="282" class="- topic/ph task/cmd ">Add infrastructure interfaces to each compute node.</cmd>
                <info ixia_locid="283" class="- topic/itemgroup task/info ">
                    <p ixia_locid="241" class="- topic/p ">For each node, use the following command.</p>
                    <codeblock ixia_locid="196" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="317" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="200" class="+ topic/ph sw-d/userinput ">system host-if-modify -nt infra \
-n <varname ixia_locid="204" class="+ topic/keyword sw-d/varname ">networkname</varname> <varname ixia_locid="202" class="+ topic/keyword sw-d/varname ">hostname</varname> <varname ixia_locid="206" class="+ topic/keyword sw-d/varname ">port</varname></userinput>
