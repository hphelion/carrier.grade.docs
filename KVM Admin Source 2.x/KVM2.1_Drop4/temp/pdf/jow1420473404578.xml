            <step id="step_N100DB_N1004F_N1001E_N10001" ixia_locid="259" class="- topic/li task/step ">
                <cmd ixia_locid="260" class="- topic/ph task/cmd ">Specify the infrastructure subnet.</cmd>
                <info ixia_locid="261" class="- topic/itemgroup task/info ">
                    <codeblock ixia_locid="215" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="307" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="216" class="+ topic/ph sw-d/userinput ">system infra-modify \
infra_subnet=<varname ixia_locid="217" class="+ topic/keyword sw-d/varname ">subnet/mask</varname> action=apply</userinput></codeblock>
                    <p ixia_locid="218" class="- topic/p ">For example:</p>
                    <draft-comment author="jowens" ixia_locid="320" translate="no" dir="ltr" class="- topic/draft-comment ">US62814 update infra-modify
                        output</draft-comment>
                    <codeblock ixia_locid="219" class="+ topic/pre pr-d/codeblock "><systemoutput ixia_locid="308" class="+ topic/ph sw-d/systemoutput ">~(keystone_admin)$ </systemoutput><userinput ixia_locid="220" class="+ topic/ph sw-d/userinput ">system infra-modify \
infra_subnet=192.168.205.0/24 action=apply</userinput>

<systemoutput ixia_locid="309" class="+ topic/ph sw-d/systemoutput ">+--------------+--------------------------------------+
