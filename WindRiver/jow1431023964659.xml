                    <dl>
                        <dlentry ixia_locid="75">
                            <dt ixia_locid="76">Disabled</dt>
                            <dd ixia_locid="77">
                                <p ixia_locid="78">Do not assign an IPv6 address.</p>
                            </dd>
                        </dlentry>
                        <dlentry ixia_locid="79">
                            <dt ixia_locid="80">Static</dt>
                            <dd ixia_locid="81">
                                <p ixia_locid="82">Use a static IPv6 address.</p>
                            </dd>
